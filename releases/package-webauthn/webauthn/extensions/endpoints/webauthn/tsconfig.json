{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "..",
    "outDir": "dist",
    "lib": ["ES2021"],
    "types": ["node", "express"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["src/**/*", "../_shared/webauthn-router/**/*"],
  "exclude": ["src/__tests__/**/*", "node_modules", "dist"]
}
