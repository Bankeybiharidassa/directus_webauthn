{
  "name": "webauthn",
  "version": "0.4.2",
  "description": "Canonical WebAuthn Directus endpoint extension mounted at /webauthn.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:shared": "npm ci --prefix ../_shared/webauthn-router && npm --prefix ../_shared/webauthn-router run build",
    "build": "npm run build:shared && directus-extension build",
    "dev": "npm run build:shared && directus-extension build --watch",
    "test": "vitest run src/__tests__/*.test.ts"
  },
  "dependencies": {
    "webauthn-router-shared": "file:../_shared/webauthn-router"
  },
  "devDependencies": {
    "@simplewebauthn/server": "^13.2.2",
    "@directus/extensions-sdk": "^17.0.4",
    "@types/supertest": "^2.0.16",
    "@types/express": "^4.17.21",
    "supertest": "^7.1.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.4.5",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "axios": "^1.12.2",
    "js-yaml": "^4.1.1",
    "vite": "^7.1.12",
    "nodemailer": "^7.0.11"
  },
  "directus:extension": {
    "host": "api",
    "path": "./dist/index.js",
    "source": "./src/index.ts",
    "type": "endpoint"
  }
}
